<apex:page controller="CTMController"  showHeader="false" standardStylesheets="false">
    
    
    <link href="//maxcdn.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap.min.css" rel="stylesheet" /> 
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.12.2/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/js/bootstrap.min.js"></script>
    
    <style>
        .button{
         background-color:#098CDB;
         color:white;
         font-family;verdana; }     
        .pbody span b{width:40%; float:left; margin-right:2%;} 
        .btn_cls{text-align:center; padding-bottom:50px; border-bottom:3px solid #000;} 
        .btn_cls input{border-radius: 6px !important;    box-shadow: none;    width: 24%; padding-top:3px; padding-bottom:3px;margin-right: 4px; border: 1px solid #09496f; }  
        .btn_cls input:last:child{margin-right: 0px;} 
        .description_table{width:100%;}
        .description_table thead th, .description_table tbody td{padding:5px;}
        .description_table thead th:first-child, .description_table tbody td:first-child{width:70%;}
        .description_table thead th:last-child,  .description_table tbody td:last-child{width:30%;}
        
    </style>
    
    <apex:form ><br/><br/>
        <div style="width:25%;margin:0 auto;border:3px solid #436D85; background-color:lightgrey;">
            <apex:pageBlock title="Create Template" id="ClearFields"><br/>               
                    <b> Template Description: </b>&nbsp;<apex:image value="{!$Resource.Required}"/> &nbsp;&nbsp;<apex:inputField value="{!NewCTM.Name}"  style="background-color:lightgrey; width:40%" required="true"/><br/><br/>
                    <b> Template Description: </b>&nbsp;<apex:image value="{!$Resource.Required}"/> &nbsp;&nbsp;<apex:inputField value="{!NewCTM.Template_Status__c}" style="background-color:lightgrey;width:40%; padding:3px 2px;"/><br/><br/>
                <div class="btn_cls">                   
                    <!-- <input type="button" value="Save & New" class="button">
                        <apex:actionsupport action="{!SaveandNew}" event="Onclick"  reRender="ClearFields" />
                    </input> -->
                  <apex:commandButton value="Save & New" action="{!SaveandNew}" reRender="sr" styleClass="button" oncomplete="location.reload();"/>
                     <apex:commandButton value="Save & Close" style="background-color:#098CDB;color:white;font-family;verdana;"/>
                    <apex:commandButton value="Cancel" onclick="this.form.reset();return false;" styleClass="button"/><br/>
                </div>
                
                    <table class="description_table">
                        <thead>
                            <tr>
                                <th><b>Template description</b></th>
                                <th><b>Status</b></th>
                            </tr>     
                        </thead>
                        <tbody>
                            <apex:repeat value="{!CTMList}" var="CTM" id="sr">
                                <tr>
                                    <td>
                                        <apex:outputText value="{!CTM.Name}"/>
                                    </td>
                                    <td>
                                        <apex:outputText value="{!CTM.Template_Status__c}" />
                                    </td>
                                </tr>
                            </apex:repeat>
                        </tbody>
                    </table> 
            </apex:pageBlock>
        </div>
    </apex:form>
    
</apex:page>